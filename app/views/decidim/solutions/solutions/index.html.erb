<%= stylesheet_link_tag "decidim/sdgs/ods" %>
<%= stylesheet_link_tag "decidim/solutions/solutions" %>

<div class="row columns">
  <div class="title-action">
    <h2 id="solutions-count" class="title-action__title section-heading">
      <%= render partial: "count" %>
    </h2>
  </div>
</div>

<div class="row">
  <% if !@component_settings.hide_filters %>
    <div class="columns mediumlarge-4 large-3">
      <%= render partial: "filters_small_view" %>
      <div class="card card--secondary show-for-mediumlarge">
        <%= render partial: "filters" %>
      </div>
    </div>
    <div id="solutions" class="columns mediumlarge-8 large-9" aria-live="polite">
  <% else %>
    <div id="solutions" class="columns mediumlarge-11 large-12" aria-live="polite">
  <% end %>
    <%= render partial: "solutions" %>
  </div>
</div>
<%= javascript_include_tag("decidim/filters") %>
<%= javascript_include_tag("decidim/results_listing") %>

<%= render partial: "decidim/sdgs/sdgs_filter/modal" %>
