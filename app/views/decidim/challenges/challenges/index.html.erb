<%= render partial: "decidim/shared/component_announcement" %>

<%= stylesheet_pack_tag "decidim_sdgs" %>
<%= stylesheet_pack_tag "decidim_challenges" %>

<div class="row columns">
  <div class="title-action">
    <h2 id="challenges-count" class="title-action__title section-heading">
      <%= render partial: "count", locals: {challenges: challenges} %>
    </h2>
  </div>
</div>

<div class="row">
  <% if !@component_settings.hide_filters %>
    <div class="columns mediumlarge-4 large-3">
      <%= render partial: "filters_small_view" %>
      <div class="card card--secondary show-for-mediumlarge">
        <%= render partial: "filters" %>
      </div>
    </div>
    <div id="challenges" class="columns mediumlarge-8 large-9" aria-live="polite">
  <% else %>
    <div id="challenges" class="columns mediumlarge-11 large-12" aria-live="polite">
  <% end %>
    <%= render partial: "challenges" %>
  </div>
</div>

 <%= render partial: "decidim/sdgs/sdgs_filter/modal" %>
